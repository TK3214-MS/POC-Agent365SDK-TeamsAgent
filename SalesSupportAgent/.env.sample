# ========================================
# LLM 設定
# ========================================
# 使用する LLM プロバイダー (LMStudio, Ollama, AzureOpenAI, OpenAI)
LLM__Provider=LMStudio

# LM Studio 設定
LLM__LMStudio__Endpoint=http://localhost:1234/v1
LLM__LMStudio__ModelName=local-model
LLM__LMStudio__ApiKey=not-needed

# Ollama 設定
LLM__Ollama__Endpoint=http://localhost:11434
LLM__Ollama__ModelName=qwen2.5:latest

# Azure OpenAI 設定
LLM__AzureOpenAI__Endpoint=
LLM__AzureOpenAI__DeploymentName=
LLM__AzureOpenAI__ApiKey=

# OpenAI 設定
LLM__OpenAI__ApiKey=
LLM__OpenAI__ModelName=gpt-4o

# ========================================
# Microsoft 365 / Graph API 設定
# ========================================
M365__TenantId=
M365__ClientId=
M365__ClientSecret=

# ========================================
# Bot Framework 設定
# ========================================
Bot__MicrosoftAppType=MultiTenant
Bot__MicrosoftAppId=
Bot__MicrosoftAppPassword=
Bot__MicrosoftAppTenantId=

# ========================================
# OpenTelemetry 設定
# ========================================
OpenTelemetry__ServiceName=SalesSupportAgent
OpenTelemetry__ServiceVersion=1.0.0
